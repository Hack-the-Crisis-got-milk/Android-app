<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply filters"
            android:textSize="25sp"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/close_filter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop busyness"
        android:fontFamily="sans-serif-light"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/busy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busy"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorShopClosed"
            android:textSize="15sp"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empty"
            android:textColor="@color/colorShopOpened"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select products"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_product_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/filter_products_background"
        android:scrollbars="vertical"
        android:elevation="3dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_filter_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:text="apply filter"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_shop_bakground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/inf_shop_photo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/rimi"
        android:elevation="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/item_shop_bakground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/info_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rimi"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_time"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/info_shop_open_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Opened"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4CAF50"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_busyness"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/info_busy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorShopClosed"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:text="Report busyness"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feedback_busy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Busy"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/feedback_average"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Average"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/feedback_empty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Empty"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:text="Report available products"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedback_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/filter_products_background"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:elevation="3dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>